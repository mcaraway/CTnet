<h1><i class="fa fa-shopping-cart fa-fw"></i>Orders</h1>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Ordernumber</th>
      <th>Orderdate</th>
      <th>Localstatus</th>
      <th>Onlinestatus</th>
      <th>Requestedshipping</th>
      <th>Billfirstname</th>
      <th>Billmiddlename</th>
      <th>Billlastname</th>
      <th>Billcompany</th>
      <th>Billstreet1</th>
      <th>Billstreet2</th>
      <th>Billstreet3</th>
      <th>Billcity</th>
      <th>Billstateprovcode</th>
      <th>Billpostalcode</th>
      <th>Billcountrycode</th>
      <th>Billemail</th>
      <th>Billpobox</th>
      <th>Shipfirstname</th>
      <th>Shipmiddlename</th>
      <th>Shiplastname</th>
